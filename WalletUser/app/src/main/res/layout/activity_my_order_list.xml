<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8FA"
    tools:context=".ui.activity.MyOrderListActivity">


    <include
        layout="@layout/title_bar"
        android:layout_width="fill_parent"
        android:layout_height="45dp" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_layout_my_order"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:layout_constraintTop_toBottomOf="@id/cl_root_view"
        app:tabIndicatorColor="#232630"
        app:tabMode="fixed"
        app:tabSelectedTextColor="#587BFC"
        app:tabTextAppearance="@style/MyTabLayoutTextAppearance"
        app:tabTextColor="#4A4A4A" />


    <android.support.v4.view.ViewPager
        android:id="@+id/vp_my_order"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        android:paddingBottom="5dp"
        app:layout_constraintHeight_percent="0.85"
        app:layout_constraintTop_toBottomOf="@id/tab_layout_my_order" />


</android.support.constraint.ConstraintLayout>