<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_dialog_background"
    android:gravity="center"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="下单提示"
        android:textSize="16sp"
        android:textColor="#232630"
        android:gravity="left|center"
        android:paddingLeft="18dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="#E8E9ED"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="本次交易已通过平台担保，请安心付款，如交易产生纠纷，可向平台申诉，我们会维护您的权益。"
        android:textSize="15sp"
        android:textColor="#333333"
        android:gravity="left"
        android:layout_marginTop="20dp"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确认下单后，请在15分钟内完成付款，期间不能再发起其他交易。"
        android:textSize="12sp"
        android:textColor="#FF9238"
        android:gravity="left"
        android:layout_marginTop="20dp"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="35dp"
        >
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cb_no_notice"
            style="@style/MyCheck_Box"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下次不再提醒"
            android:textSize="14sp"
            android:textColor="#4C7FFF"
            android:gravity="left"
            android:layout_marginLeft="5dp"
            />

    </LinearLayout>


    <Button
        android:layout_marginTop="26dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@drawable/shape_gray_cornor4"
        android:text="知道了"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:id="@+id/btn_confirm"
        />
    

</LinearLayout>