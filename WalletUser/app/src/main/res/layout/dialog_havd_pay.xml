<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_dialog_background"
    android:gravity="center"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="确认已付款"
        android:textSize="16sp"
        android:textColor="#232630"
        android:gravity="left|center"
        android:paddingLeft="18dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="#E8E9ED"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请选择您转账给卖家时使用的支付方式"
        android:textSize="15sp"
        android:textColor="#333333"
        android:gravity="left"
        android:layout_marginTop="20dp"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="提示：如果您还未付款，恶意点击已转账，收到投诉后会处罚账号，严重情况下账户将会被封禁。"
        android:textSize="12sp"
        android:textColor="#4a4a4a"
        android:gravity="left"
        android:layout_marginTop="20dp"
        android:paddingLeft="18dp"
        android:lineSpacingExtra="2dp"
        android:paddingRight="18dp"
        />

    <LinearLayout
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="35dp"
        >


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">


            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cb_zfb"
                style="@style/MyCheck_Box"
                />

            <TextView
                android:layout_toRightOf="@id/cb_zfb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付宝"
                android:textSize="14sp"
                android:textColor="#4a4a4a"
                android:layout_marginLeft="5dp"
                android:id="@+id/tv_zfb"
                />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">


            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cb_we_chat_pay"
                style="@style/MyCheck_Box"
                />

            <TextView
                android:layout_toRightOf="@id/cb_we_chat_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信支付"
                android:textSize="14sp"
                android:textColor="#4a4a4a"
                android:layout_marginLeft="5dp"
                android:id="@+id/tv_we_chat"
                />


        </RelativeLayout>



        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">


            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cb_bank_card"
                style="@style/MyCheck_Box"
                />

            <TextView
                android:layout_toRightOf="@id/cb_bank_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="银行卡"
                android:textSize="14sp"
                android:textColor="#4a4a4a"
                android:layout_marginLeft="5dp"
                android:id="@+id/tv_bank_card"
                />


        </RelativeLayout>


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:orientation="horizontal">


        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="42dp"
            android:background="@drawable/shape_blue1_bg"
            android:text="稍后再说"
            android:textSize="15sp"
            android:textColor="@color/colorBlue"
            android:id="@+id/btn_later_on"
            />


        <Button
            android:layout_marginLeft="20dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="42dp"
            android:background="@drawable/shape_gray_cornor4"
            android:text="已转账"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:id="@+id/btn_have_transfer"
            android:clickable="false"
            />


    </LinearLayout>



</LinearLayout>
