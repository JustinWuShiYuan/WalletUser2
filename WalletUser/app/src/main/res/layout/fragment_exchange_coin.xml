<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_base"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include layout="@layout/title_bar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:text="汇率 0.0946"
        android:textColor="#394368"
        android:textSize="16sp"
        android:id="@+id/tv_rate"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="#F0F1F3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:background="@drawable/shape_gray_cornor9"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="6dp"
                android:paddingBottom="6dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/icon_ab"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="AB"
                    android:textColor="#394368"
                    android:textSize="15sp" />

            </LinearLayout>

            <EditText
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/shape_gray_cornor9"
                android:gravity="center"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:textColor="#394368"
                android:textSize="15sp"
                android:id="@+id/et_input_ab_number"
                android:hint="请输入AB数量"
                android:textCursorDrawable="@null"
                android:inputType="numberDecimal"
                android:singleLine="true"
                />

        </LinearLayout>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_exchange_1" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:background="@drawable/shape_gray_cornor9"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="6dp"
                android:paddingBottom="6dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/icon_btc_3"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="BTC"
                    android:textColor="#394368"
                    android:textSize="15sp" />

            </LinearLayout>

            <EditText
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/shape_gray_cornor9"
                android:gravity="center"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:textColor="#394368"
                android:textSize="14sp"
                android:hint="请输入BTC数量"
                android:textCursorDrawable="@null"
                android:inputType="numberDecimal"
                android:singleLine="true"
                android:id="@+id/et_input_btc_number"
                />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="left"
        android:paddingLeft="18dp"
        android:text="比特币钱包收币地址"
        android:textColor="#999999"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="18dp"
        android:background="@drawable/shape_gray_cornor10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:gravity="left"
            android:paddingLeft="6dp"
            android:paddingTop="8dp"
            android:paddingRight="6dp"
            android:paddingBottom="8dp"
            android:textColor="#666666"
            android:textSize="15sp"
            android:textCursorDrawable="@null"
            android:hint="请输入BTC钱包地址"
            android:singleLine="true"
            android:id="@+id/et_input_btc_address"
            android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:maxLength="34"
            />

        <ImageView
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginRight="4dp"
            android:src="@drawable/icon_qr_code_3" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_submit_apply"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="18dp"
        android:layout_marginRight="45dp"
        android:background="@drawable/shape_gray_cornor11"
        android:text="提交申请"
        android:textColor="#F7F9FA"
        android:textSize="15sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginTop="18dp"
        android:background="#F0F1F3" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="18dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="我的申请"
        android:textColor="#999999"
        android:textSize="12sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="#F0F1F3" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rl_recycler_my_apply"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>