<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.OrderDetailActivity"
    android:background="#F6F5FA">

    <include layout="@layout/title_bar"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.12"
        />

    <View
        app:layout_constraintTop_toBottomOf="@id/cl_root_view"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:background="@drawable/shape_gray3_round_bg"
        android:id="@id/tv_1"/>


    <LinearLayout
        app:layout_constraintTop_toBottomOf="@+id/cl_root_view"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingBottom="50dp"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        android:orientation="vertical"
        android:background="#ffffff">

        <RelativeLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/rl_not_willGreenLight"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_complete"
                android:id="@+id/iv_order_status_icon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/iv_order_status_icon"
                android:textSize="22sp"
                android:textColor="@color/gray_3"
                android:text="已完成"
                android:id="@+id/tv_order_detail_status_des"
                android:gravity="center_vertical"/>

        </RelativeLayout>


        <View
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F0F1F3"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="23dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_6"
                android:textSize="15sp"
                android:text="订单号:"
                android:id="@+id/tv_1"
                />

            <TextView
                android:layout_toRightOf="@id/tv_1"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_3"
                android:textSize="15sp"
                android:text="4546565646"
                android:id="@+id/tv_order_detail_num"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/tv_order_detail_num"
                android:layout_marginLeft="-2dp"
                android:src="@drawable/icon_details"
                android:layout_centerVertical="true"
                android:scaleY="0.8"
                android:scaleX="0.8"
                android:id="@+id/iv_copy_order_detail_num"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="23dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_6"
                android:textSize="15sp"
                android:text="订单金额:"
                android:id="@+id/tv_2"
                />

            <TextView
                android:layout_toRightOf="@id/tv_2"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_3"
                android:textSize="15sp"
                android:text="4546565646"
                android:id="@+id/tv_order_detail_money"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/tv_order_detail_money"
                android:layout_marginLeft="-2dp"
                android:src="@drawable/icon_details"
                android:layout_centerVertical="true"
                android:scaleY="0.8"
                android:scaleX="0.8"
                android:id="@+id/iv_copy_order_detail_money"
                />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="23dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_6"
                android:textSize="15sp"
                android:text="@string/coinTypePrice"
                android:id="@+id/tv_3"
                />

            <TextView
                android:layout_toRightOf="@id/tv_3"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_3"
                android:textSize="15sp"
                android:text="100 CNY = 1 AB"
                android:id="@+id/tv_order_detail_single_price"
                />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="23dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_6"
                android:textSize="15sp"
                android:text="@string/orderNum"
                android:id="@+id/tv_7"
                />

            <TextView
                android:layout_toRightOf="@id/tv_7"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_3"
                android:textSize="15sp"
                android:text="890 AB"
                android:id="@+id/tv_order_num"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="23dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_6"
                android:textSize="15sp"
                android:text="订单时间:"
                android:id="@+id/tv_4"
                />

            <TextView
                android:layout_toRightOf="@id/tv_4"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_3"
                android:textSize="15sp"
                android:text="2018-12-28 12:15:59"
                android:id="@+id/tv_order_detail_time"
                />

        </RelativeLayout>

        <!--完成 底部模块开始 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl_complete_bottom_root"
            android:visibility="gone"
            >

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_9"
                android:layout_marginTop="30dp"
                android:id="@+id/line1"/>
            <RelativeLayout
                android:layout_below="@id/line1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="23dp"
                android:id="@+id/rl_trade_code">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_6"
                    android:textSize="15sp"
                    android:text="交易号:"
                    android:id="@+id/tv_8"
                    />

                <TextView
                    android:layout_toRightOf="@id/tv_8"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_3"
                    android:textSize="15sp"
                    android:text="2xkdjlfaksdd"
                    android:id="@+id/tv_trade_no"
                    />

            </RelativeLayout>



            <RelativeLayout
                android:layout_below="@id/rl_trade_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="23dp"
                android:id="@+id/rl_block_code">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_6"
                    android:textSize="15sp"
                    android:text="区块:"
                    android:id="@+id/tv_9"
                    />

                <TextView
                    android:layout_toRightOf="@id/tv_9"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_3"
                    android:textSize="15sp"
                    android:text="123543"
                    android:id="@+id/tv_block_num"
                    />

            </RelativeLayout>
        </RelativeLayout>

        <!--完成 底部模块结束 -->


        <!--已取消 底部模块开始 里面没有内容 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl_order_had_canceled"
            android:visibility="gone">

        </RelativeLayout>
        <!--取消 底部模块结束 里面没有内容-->

        <!--未付款 底部模块开始 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl_have_not_pay"
            android:visibility="gone"
            >
            <TextView
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="16:06"
                android:textSize="32sp"
                android:gravity="center"
                android:textColor="@color/yellow_ff9238"
                android:id="@+id/tv_order_remain_time_waiting"/>


            <TextView
                android:layout_below="@id/tv_order_remain_time_waiting"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/give_user_hint"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="@color/colorBlue"
                android:id="@+id/tv_go_to_pay_hint"/>


            <TextView
                android:layout_marginTop="10dp"
                android:layout_below="@id/tv_go_to_pay_hint"
                android:layout_width="190dp"
                android:layout_height="40dp"
                android:text="已完成付款"
                android:layout_centerHorizontal="true"
                android:id="@+id/tv_had_pay"
                style="@style/text_style_16sp_white_1"
                android:background="@drawable/shape_blue_bg"/>


            <TextView
                android:layout_centerHorizontal="true"
                android:id="@+id/tv_cancel_order"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/tv_had_pay"
                android:layout_width="190dp"
                android:layout_height="40dp"
                style="@style/text_style_16sp_blue"
                android:text="取消订单"
                android:background="@drawable/shape_white_bg_round4"/>


        </RelativeLayout>
        <!--未付款 底部模块结束 -->





        <!--已经付款  底部模块开始 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl_had_pay"
            android:visibility="gone"
            >

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="16:06"
                android:textSize="32sp"
                android:gravity="center"
                android:textColor="@color/yellow_ff9238"
                android:id="@+id/tv_order_remain_time"/>



            <TextView
                android:layout_below="@id/tv_order_remain_time"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/give_user_hint"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="@color/colorBlue"
                android:id="@+id/tv_give_user_hint_info"/>

            <TextView
                android:layout_below="@id/tv_give_user_hint_info"
                android:id="@+id/tv_will_appeal"
                android:layout_width="match_parent"
                android:layout_marginLeft="65dp"
                android:layout_marginRight="65dp"
                android:layout_marginTop="10dp"
                android:layout_height="40dp"
                style="@style/text_style_16sp_white_1"
                android:text="我要申诉"
                android:background="@drawable/shape_gray_round_bg"
                android:gravity="center"
                />

        </RelativeLayout>

        <!--已经付款  底部模块结束 -->


        <!--申诉中  底部模块开始 -->

        <TextView
            android:id="@+id/tv_cancel_appealing"
            android:layout_width="match_parent"
            android:layout_marginLeft="65dp"
            android:layout_marginRight="65dp"
            android:layout_marginTop="50dp"
            android:layout_height="40dp"
            style="@style/text_style_16sp_white_1"
            android:text="取消申诉"
            android:background="@drawable/shape_blue_bg"
            android:gravity="center"
            android:textColor="#f7f9fa"
            android:visibility="gone"
            />

        <!--申诉中  底部模块结束 -->



    </LinearLayout>


    <RelativeLayout
        android:id="@+id/rl_contact_buyer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/colorWhite"
        android:gravity="center">

        <ImageView
            android:clickable="false"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/icon_cont"
            android:id="@+id/iv_contact_buyer_icon"
            android:scaleX="0.6"
            android:scaleY="0.6"/>

        <TextView
            android:id="@+id/tv_contact_buyer"
            android:layout_toRightOf="@id/iv_contact_buyer_icon"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textColor="@color/yellow_ff9238"
            android:text="联系买家"
            android:gravity="center"
            android:textSize="18sp"/>

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>