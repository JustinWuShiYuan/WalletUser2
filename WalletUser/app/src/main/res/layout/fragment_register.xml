<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.LoginActivity"
    android:background="@color/colorWhite">

    <RelativeLayout
        android:id="@+id/rl_head_container"
        android:background="@drawable/icon_login_bg"
        android:layout_width="match_parent"
        android:layout_height="220dp">

        <include layout="@layout/title_bar_no_background"/>


        <TextView
            android:layout_below="@id/cl_title_root_view"
            android:id="@+id/tv_register_success"
            android:paddingTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="220dp"
            android:text="欢迎注册"
            android:textSize="30sp"
            android:gravity="center|top"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorWhite"/>



    </RelativeLayout>




    <TextView
        android:layout_marginLeft="35dp"
        android:layout_marginTop="-25dp"
        android:gravity="center_horizontal"
        android:layout_below="@id/rl_head_container"
        android:id="@+id/tv_input_account_name"
        style="@style/text_style_17sp_black1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请设置账户名" />


    <EditText
        android:id="@+id/et_input_account"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="35dp"
        style="@style/text_style_13sp_black1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/tv_input_account_name"
        android:gravity="left|center_vertical"
        android:hint="必须包含 数字、大小写英文，最长8位数"
        android:background="@null"
        />

    <View
        android:layout_marginLeft="32dp"
        android:layout_marginRight="35dp"
        android:layout_below="@id/et_input_account"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lineColor"/>




    <TextView
        android:layout_marginLeft="35dp"
        android:layout_marginTop="25dp"
        android:gravity="center_horizontal"
        android:layout_below="@id/et_input_account"
        android:id="@+id/tv_input_account_pwd"
        style="@style/text_style_17sp_black1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请设置账户密码" />


    <EditText
        android:id="@+id/et_input_account_pwd"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="35dp"
        style="@style/text_style_13sp_black1"
        android:layout_width="match_parent"
        android:gravity="left|center_vertical"
        android:layout_height="45dp"
        android:layout_below="@id/tv_input_account_pwd"
        android:background="@null"
        android:hint="必须包含 数字、大小写英文，最长16位数"
        android:inputType="textPassword"/>


    <View
        android:layout_marginLeft="32dp"
        android:layout_marginRight="35dp"
        android:layout_below="@id/et_input_account_pwd"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lineColor"/>





    <TextView
        android:layout_marginLeft="35dp"
        android:layout_marginTop="25dp"
        android:gravity="center_horizontal"
        android:layout_below="@id/et_input_account_pwd"
        android:id="@+id/tv_input_account_pwd_again"
        style="@style/text_style_17sp_black1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请确认账户密码" />


    <EditText
        android:id="@+id/et_input_account_pwd_again"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="35dp"
        style="@style/text_style_13sp_black1"
        android:layout_width="match_parent"
        android:gravity="left|center_vertical"
        android:layout_height="45dp"
        android:layout_below="@id/tv_input_account_pwd_again"
        android:background="@null"
        android:hint="必须包含 数字、大小写英文，最长16位数"
        android:inputType="textPassword"/>


    <View
        android:layout_marginLeft="32dp"
        android:layout_marginRight="35dp"
        android:layout_below="@id/et_input_account_pwd_again"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lineColor"/>






    <TextView
        android:id="@+id/tv_login"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/shape_blue_bg_round10"
        android:textColor="@color/colorWhite"
        android:text="下一步"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_gravity="center"/>


    <RelativeLayout
        android:gravity="center_horizontal"
        android:layout_marginBottom="44dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tv_have_no_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已有 UG pay 账号？"
            style="@style/text_style_15sp_gray_6"/>

        <TextView
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/tv_have_no_account"
            android:id="@+id/tv_goto_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_style_15sp_blue3"
            android:textColor="@color/colorBlue"
            android:text="去登陆"/>

    </RelativeLayout>



</RelativeLayout>
